        ौ        O:    //  [O:] or [aU] ??
        ौं       O~   
        ौँ       O~   
?3      ौ        aU    //  [O:] or [aU] ??

.group ॢ     // vowel sign l
        ॢ        l-

.group ॣ    // vowel sign ll
        ॣ        l-:

.group ॐ
        ॐ        o~m

